page{  
  background: #ffffff;  
}  


/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height:100%x;  
  background-color: rgb(255, 255, 255);  
  color: #ffffff;
}
 /*左侧盒子*/  
.nav_left{  
  display: inline-block;  
  width: 25%;  
  height: 100%;  
  background: #f5f5f5;  
  text-align: center; 
  color:gray; 
}  

/*左边列表*/  
.nav_left .nav_left_items{  
  height: 40px;  
  line-height: 40px;  
  padding: 6px 0;  
  border-bottom: 1px solid #dedede;  
  font-size: 14px; 
}  

/*左边列表选中后状态*/  
.nav_left .nav_left_items.active{   
  background: #fff;  
  color: #000000; 
  border-left: 3px solid #000000;
}  
/*右边列表*/  
.nav_right{  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 75%;  
  height: 1000px;  
  padding: 10px;  
  box-sizing: border-box;  
  background: #fff;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  /*浮动向左*/  
  float: left;  
  width: 100%;  
  height: 120px;  
  text-align: center;
  border-bottom:1px solid gray ;
}  
.nav_right .nav_right_items image{  
  /*被图片设置宽高*/  
  width: 60px;  
  height: 60px;  
  margin-top: 15px;  
  float: left;
}  
.nav_right .nav_right_items text{  
  /*给text设成块级元素*/  
  display: block;  
  margin: 15px;  
  font-size: 14px;  
  color: black;
  float: left;
} 

/* 提示文本的样式*/
.nodata_text
{
  color: black;
  font-size: 14px;  
  text-align: center;  
} 

.search{
  width: 100%;
  height: 10px;
}

.swiperimg{
  width: 100%;
